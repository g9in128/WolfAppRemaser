<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/characters"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:gravity="center">

            <TextView
                android:id="@+id/selected_character"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대기시간 : "/>

            <EditText
                android:id="@+id/waiting_time"
                android:inputType="number"
                android:digits="0123456789"
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초"/>


        </LinearLayout>

        <EditText
            android:id="@+id/host_speech"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"/>

        <TextView
            android:id="@+id/entry"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/entry_text"/>
        
        <LinearLayout
            android:id="@+id/select_btns"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:gravity="center">
            
            <Button
                android:id="@+id/load_btn"
                android:layout_marginRight="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#aaa"
                android:text="@string/load_text_btn_text"/>

            <Button
                android:id="@+id/start_btn"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#aaa"
                android:text="@string/start_btn_text"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/play_btns"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="2">

            <Button
                android:id="@+id/stop_btn"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#aaa"
                android:text="@string/stop_btn_text"/>

            <Button
                android:id="@+id/pause_btn"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#aaa"
                android:text="@string/pause_btn_text"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>